<%- include("../partials/header.ejs"); %>

	<div class="row">
		<div class="col-md-12 text-center">
			<h1>Login Page</h1>
		</div>
		<div class="col-xs-12 col-md-7 my-25 mx-auto">

			<form class="form-signin needs-validation" action="/login" method="post" novalidate>
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="username" autofocus required>
					<div class="invalid-feedback">
						Username is required
					</div>
				</div>

				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="password" required>
					<div class="invalid-feedback">
						Password is required
					</div>
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit</button>
				</div>

				<div>
					<p class="text-center"><a href="/password-reset">Forgot your password?</a></p>
				</div>
			</form>

			<div>
				<a href="/register" class="link mb-5">
					<button type="button" class="btn btn-lg btn-outline-primary btn-block mt-5">
						New to GMBlog? Create an account.
					</button>
				</a>
			</div>

		</div>
	</div>


	<%- include("../partials/footer.ejs"); %>