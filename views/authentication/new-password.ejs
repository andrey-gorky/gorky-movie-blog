<%- include("../partials/header.ejs"); %>

	<div class="row">
		<div class="col-md-12">
			<form class="needs-validation" action="/new-password/<%= token %>" method="POST" novalidate>
				<legend>Password Reset</legend>
				<div class="form-group">
					<label for="password">New Password</label>
					<input type="password" name="password" value="" placeholder="New Password" autofocus="autofocus"
						class="form-control" required>
					<div class="invalid-feedback">
						Enter new password
					</div>
				</div>

				<div class="form-group">
					<label for="confirm">Confirm Password</label>
					<input type="password" name="confirm" value="" placeholder="Confirm Password" autofocus="autofocus"
						class="form-control" required>
					<div class="invalid-feedback">
						Confirm new password
					</div>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="Update Password">
				</div>
			</form>
		</div>
	</div>


	<%- include("../partials/footer.ejs"); %>