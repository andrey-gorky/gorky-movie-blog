<%- include("../partials/header.ejs"); %>

	<div class="row">
		<div class="col-md-12 text-center mb-3">
			<h3>Paste in movie URL from <a href="https://www.imdb.com/" target="_blank">IMDB</a></h3>
		</div>
		<div class="col-xs-12 col-md-7 my-25 mx-auto">

			<form class="needs-validation" action="/movies/new" method="GET" novalidate>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Movie url" name="search" autofocus required>
					<div class="invalid-feedback">
						<a href="https://www.imdb.com/">IMDB</a> link to a movie is required
					</div>
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-success btn-block" value="Submit" type="submit">
				</div>
			</form>

			<a href="/movies">Go to Movies</a>

		</div>

	</div>
	</div>

	<%- include("../partials/footer.ejs"); %>